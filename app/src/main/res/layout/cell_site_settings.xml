<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingLeft="@dimen/size_small"
                android:paddingRight="@dimen/size_small"
                tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/faviconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:maxHeight="18dp"
        android:maxWidth="18dp"
        android:minHeight="18dp"
        android:minWidth="18dp"
        />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_tiny"
        android:layout_marginRight="@dimen/size_tiny"
        android:layout_toEndOf="@id/faviconView"
        android:layout_toStartOf="@+id/stateText"
        android:text="_monsite.fr"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_tiny"
        android:layout_toStartOf="@+id/progressBar"
        android:gravity="right"
        android:minWidth="66dp"
        android:text="_state"
        android:textColor="@color/accent"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateOnly="true"
        android:maxHeight="18dp"
        android:maxWidth="18dp"
        android:minHeight="18dp"
        android:minWidth="18dp"/>

</RelativeLayout>
